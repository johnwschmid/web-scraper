<p style="color: green"><%= notice %></p>

<div class="flex justify-between">
  <div>
    <%= link_to "â€¹", pages_path, class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100" %> |
    <%= link_to "Edit this page", edit_page_path(@page), class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100" %>
  </div>
  <%= button_to "Destroy this page", @page, method: :delete, class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100 text-sm" %>
</div>

<h5 class="font-bold">Name: <%= @page.name %></h5>
<p class="text-sm text-gray-700">URL: <%= link_to @page.url, @page.url, class: "text-blue-400", target: "_blank" %></p>
<p class="text-sm text-gray-700">Check Type: <%= @page.check_type %></p>
<p class="text-sm text-gray-700">Selector: <%= @page.selector %></p>
<p class="text-sm text-gray-700">Match Text: <%= @page.match_text %></p>
<br>

<div class="flex flex-col">
  <div class="ml-5 mb-3">
    <%= button_to 'Check Results', page_result_path(@page), class: "border border-gray-300 rounded px-2 py-1 hover:bg-gray-100" %>
  </div>
  <div>
    <h4 class="font-bold">Results:</h4>
    <%= render @page.results.order(created_at: :desc) %>
  </div>
</div>
